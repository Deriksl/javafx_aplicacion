<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.tienda.deportes.ui.MenuController" 
      spacing="10" styleClass="root">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Menú Principal" styleClass="title-label"/>
    
    <HBox fx:id="menuButtonsContainer" spacing="10">
        <Button fx:id="carritoBtn" text="Carrito" styleClass="button"/>
        <Button fx:id="comprasBtn" text="Mis Compras" styleClass="button"/>
        <Button fx:id="reporteVentasBtn" text="Reporte Ventas" styleClass="button" visible="false"/>
        <Button fx:id="reporteInventarioBtn" text="Reporte Inventario" styleClass="button" visible="false"/>
    </HBox>
    
    <Label text="Productos Disponibles:" styleClass="subtitle-label"/>
    
    <TableView fx:id="productosTable" styleClass="table-view">
        <columns>
            <TableColumn text="Imagen" fx:id="imagenColumn"/>
            <TableColumn text="Producto" fx:id="nombreColumn"/>
            <TableColumn text="Precio" fx:id="precioColumn"/>
            <TableColumn text="Acciones" fx:id="accionesColumn"/>
        </columns>
    </TableView>
    
    <Button fx:id="cerrarSesionBtn" text="Cerrar Sesión" styleClass="button"/>
</VBox>