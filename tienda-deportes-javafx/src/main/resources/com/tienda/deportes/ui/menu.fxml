<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.tienda.deportes.ui.MenuController" 
      spacing="15" styleClass="root">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Menú Principal" styleClass="label-titulo"/>
    
    <HBox fx:id="menuButtonsContainer" spacing="15">
        <Button fx:id="carritoBtn" text="Carrito" styleClass="button"/>
        <Button fx:id="comprasBtn" text="Mis Compras" styleClass="button"/>
        <Button fx:id="reporteVentasBtn" text="Reporte Ventas" styleClass="button" visible="false"/>
        <Button fx:id="reporteInventarioBtn" text="Reporte Inventario" styleClass="button" visible="false"/>
    </HBox>
    
    <Label text="Productos Disponibles:" styleClass="label-subtitulo"/>
    
    <TableView fx:id="productosTable" styleClass="table-view">
        <columns>
            <TableColumn text="Imagen" fx:id="imagenColumn" styleClass="table-column"/>
            <TableColumn text="Producto" fx:id="nombreColumn" styleClass="table-column"/>
            <TableColumn text="Precio" fx:id="precioColumn" styleClass="table-column"/>
            <TableColumn text="Acciones" fx:id="accionesColumn" styleClass="table-column"/>
        </columns>
    </TableView>
    
    <Button fx:id="cerrarSesionBtn" text="Cerrar Sesión" styleClass="secondary-button"/>
</VBox>