<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.tienda.deportes.ui.GestionProductosController"
    spacing="10" styleClass="root">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Gesti贸n de Productos" styleClass="label-titulo"/>
    
    <TableView fx:id="productosTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Nombre" fx:id="nombreColumn"/>
            <TableColumn text="Descripci贸n" fx:id="descripcionColumn"/>
            <TableColumn text="Marca" fx:id="marcaColumn"/>
            <TableColumn text="Precio" fx:id="precioColumn"/>
            <TableColumn text="Stock" fx:id="stockColumn"/>
        </columns>
    </TableView>
    
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        
        <!-- Campos del formulario -->
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Descripci贸n:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descripcionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Marca:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="marcaField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Precio:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="precioField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="Stock:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="stockField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        
        <!-- Secci贸n de imagen -->
        <Label text="Imagen:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
            <ImageView fx:id="imagenView" fitWidth="100" fitHeight="100"/>
            <Button fx:id="seleccionarImagenBtn" text="Seleccionar"/>
        </HBox>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="agregarBtn" text="Agregar" onAction="#agregarProducto"/>
        <Button fx:id="actualizarBtn" text="Actualizar" onAction="#actualizarProducto" disable="true"/>
        <Button fx:id="eliminarBtn" text="Eliminar" onAction="#eliminarProducto" disable="true"/>
        <Button text="Regresar" onAction="#regresarAlMenu"/>
    </HBox>
</VBox>