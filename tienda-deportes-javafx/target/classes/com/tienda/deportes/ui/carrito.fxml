<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.tienda.deportes.ui.CarritoController" spacing="10" styleClass="root">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Mi Carrito de Compras" styleClass="title-label"/>
    
    <HBox spacing="20" alignment="CENTER_LEFT">
        <TableView fx:id="carritoTable" styleClass="table-view">
            <columns>
                <TableColumn text="Producto" fx:id="nombreColumn"/>
                <TableColumn text="Precio" fx:id="precioColumn"/>
                <TableColumn text="Cantidad" fx:id="cantidadColumn"/>
            </columns>
        </TableView>
        
        <VBox spacing="10" alignment="CENTER">
            <ImageView fx:id="imagenView" fitWidth="150" fitHeight="150"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="+" onAction="#aumentarCantidad" styleClass="action-button"/>
                <Button text="-" onAction="#disminuirCantidad" styleClass="action-button"/>
                <Button text="Eliminar" onAction="#eliminarProducto" styleClass="delete-button"/>
            </HBox>
        </VBox>
    </HBox>
    
    <Label fx:id="totalLabel" styleClass="total-label"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Realizar Compra" onAction="#realizarCompra" styleClass="primary-button"/>
        <Button text="Regresar al MenÃº" onAction="#regresarAlMenu" styleClass="secondary-button"/>
    </HBox>
</VBox>