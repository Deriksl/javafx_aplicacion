<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.tienda.deportes.ui.GestionUsuariosController" 
    spacing="10" styleClass="root">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Gestión de Usuarios" styleClass="label-titulo" />
    
    <TableView fx:id="usuariosTable" styleClass="table-view">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" />
            <TableColumn text="Usuario" fx:id="nombreColumn" />
            <TableColumn text="Tipo" fx:id="tipoColumn" />
            <TableColumn text="Contraseña" fx:id="passwordColumn" />
        </columns>
    </TableView>
    
    <HBox spacing="10">
        <Button text="Agregar Usuario" onAction="#agregarUsuario" styleClass="button" />
        <Button fx:id="editarBtn" text="Editar Usuario" onAction="#editarUsuario" styleClass="button" disable="true" />
        <Button fx:id="eliminarBtn" text="Eliminar Usuario" onAction="#eliminarUsuario" styleClass="button" disable="true" />
        <Button text="Regresar" onAction="#regresarAlMenu" styleClass="button" />
    </HBox>
</VBox>