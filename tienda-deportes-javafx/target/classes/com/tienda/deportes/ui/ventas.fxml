<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.tienda.deportes.ui.VentasController" spacing="15" styleClass="root">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Productos Disponibles" styleClass="label-titulo"/>
    
    <TableView fx:id="tablaProductos" styleClass="table-view">
        <columns>
            <TableColumn fx:id="columnaNombre" text="Nombre" styleClass="table-column"/>
            <TableColumn fx:id="columnaDescripcion" text="Descripción" styleClass="table-column"/>
            <TableColumn fx:id="columnaMarca" text="Marca" styleClass="table-column"/>
            <TableColumn fx:id="columnaStock" text="Stock" styleClass="table-column"/>
            <TableColumn fx:id="columnaPrecio" text="Precio" styleClass="table-column"/>
        </columns>
    </TableView>
    
    <Button fx:id="btnAnadirCarrito" text="Añadir al carrito" styleClass="primary-button"/>
</VBox>