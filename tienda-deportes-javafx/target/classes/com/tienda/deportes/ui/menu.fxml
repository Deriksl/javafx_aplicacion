<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tienda.deportes.ui.MenuController" stylesheets="@/styles.css">
    <Label text="Menú Principal" styleClass="label-titulo" />
    <Button text="Cerrar Sesión" onAction="#cerrarSesion" styleClass="button" />
    <Button text="Carrito" onAction="#mostrarCarrito" styleClass="button" />
    <Button text="Ver Compras" onAction="#verCompras" styleClass="button" />

    <TableView fx:id="productosTable" styleClass="table-view">
        <columns>
            <TableColumn text="Nombre" fx:id="nombreColumn" />
            <TableColumn text="Descripción" fx:id="descripcionColumn" />
            <TableColumn text="Marca" fx:id="marcaColumn" />
            <TableColumn text="Precio" fx:id="precioColumn" />
            <TableColumn text="Stock" fx:id="stockColumn" />
            <TableColumn text="Agregar" fx:id="agregarColumn" />
        </columns>
    </TableView>
</VBox>