<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.tienda.deportes.ui.EditarUsuarioController" 
      spacing="10" styleClass="root">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Editar Usuario" styleClass="label-titulo" />
    
    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="ContraseÃ±a:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="tipoComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="guardarBtn" text="Guardar" styleClass="button" />
        <Button fx:id="cancelarBtn" text="Cancelar" styleClass="button" />
    </HBox>
</VBox>